{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                    
    "lib": ["dom", "es2020"], 
    "skipLibCheck": true,                       
    "outDir": "./build",                       
    "strict": true,                         
    "noImplicitAny": false,                   
    "strictPropertyInitialization": false,   
    "baseUrl": "./",                          
    "esModuleInterop": true,                   
    "experimentalDecorators": true,          
    "emitDecoratorMetadata": true             
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules"
  ]
}
